#!/bin/sh

#-Shutdown, reboot or logout via rofi

# option="$(printf "cancel\nshutdown now\nreboot\nlogout" | rofi -dmenu)"
#
# if [ "$option" = "cancel" ]; then
# 	exit 0
# elif [ "$option" = "logout" ]; then
# 	wm="$(grep "^exec" ~/.xinitrc | cut -d ' ' -f 2)"
# 	if [ "$wm" = "awesome" ]; then
# 		awesome-client 'awesome.quit()'
# 	elif [ "$wm" = "bspwm" ]; then
# 		bspc quit
# 	fi
# else
# 	bash "$option"
# fi

theme="$HOME/.config/rofi/regular-powermenu.rasi"

if [ "$(pgrep -x awesome)" ]; then
	logout_cmd="awesome-client 'awesome.quit()'"
elif [ "$(pgrep -x bspwm)" ]; then
	logout_cmd="bspc quit"
elif [ "$(pgrep -x Hyprland)" ]; then
	logout_cmd="hyprctl dispatch exit"
fi

uptime="$(uptime -p)"
host=$(cat /etc/hostname)

# Options
# shutdown='  shutdown'
# reboot=' reboot'
# lock='  lock'
# logout='  logout'
# yes='  yes'
# no='X  no'

shutdown='   shutdown'
reboot='  reboot'
lock='   lock'
logout='   logout'
yes='  yes'
no='X  no'

rofi_cmd() {
	rofi -dmenu \
		-p "$USER@$host" \
		-mesg "Uptime: ${uptime##up }" \
		-theme "$theme"
}

confirm_cmd() {
	rofi -theme-str 'window {location: center; anchor: center; fullscreen: false; width: 350px;}' \
		-theme-str 'mainbox {orientation: vertical; children: [ "message", "listview" ];}' \
		-theme-str 'listview {columns: 2; lines: 1;}' \
		-theme-str 'element-text {horizontal-align: 0.5;}' \
		-theme-str 'textbox {horizontal-align: 0.5;}' \
		-dmenu \
		-p 'Confirmation' \
		-mesg 'Are you Sure?' \
		-theme "$theme.rasi"
}

confirm_exit() {
	printf "%s\n%s" "$yes" "$no" | confirm_cmd
}

run_rofi() {
	printf " - cancel\n%s\n%s\n%s\n%s" "$shutdown" "$reboot" "$logout" "$lock" | rofi_cmd
}

# Actions
case "$(run_rofi)" in
    "$shutdown")
		systemctl poweroff
        ;;
    "$reboot")
		systemctl reboot
        ;;
    "$logout")
		eval "$logout_cmd"
        ;;
    "$lock")
		lockscreen
        ;;
esac

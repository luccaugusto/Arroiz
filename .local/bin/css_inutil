#!/usr/bin/env sh

classes=$(grep "^[^@]\.*{$" assets/css/style.css | sed 's/\.//g' | sed 's/{//g' | sed 's/#//g')

for classe in $classes
do
	grep "$classe" -- *.html > /dev/null ||
	grep "$classe" _layouts/*.html > /dev/null ||
	grep "$classe" _includes/*.html > /dev/null ||
	echo "$classe NÃ£o utilizada"
done

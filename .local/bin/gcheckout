#!/bin/sh
#- git checkout wrapper so i always pull when checking out a branch

branch="$1"

[ "$branch" ] || branch=$(git branch | awk '{if($1 != "*") print $1}' | fzf)
#exclude current branch
#[ "$branch" ] || select branch in $(git branch | awk '{if($1 != "*") print $1}'); do break; done

[ "$branch" ] &&
git fetch &&
git checkout "$branch" &&
git pull
